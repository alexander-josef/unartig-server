<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.Customer"
            table="Customers"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedCustomer</meta>

        <id
                name="customerId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_CustomerId</param>
            </generator>
        </id>
        <property
                name="firstName"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="lastName"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

       <property
                name="title"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>


        <property
                name="addr1"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="addr2"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="zipCode"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="city"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="state"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="country"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <!--gender: m or f-->
        <property
                name="gender"
                type="java.lang.String"
                not-null="true"
                length="1"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="oipsUsername"
                type="java.lang.String"
                length="255"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="oipsPassword"
                type="java.lang.String"
                length="255"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="email"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="phone"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="fax"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="rememberMe"
                type="java.lang.Boolean"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="noEmailFromCopla"
                type="java.lang.Boolean"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="noUnartigAccount"
                type="java.lang.Boolean"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

    </class>
</hibernate-mapping>
