<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.ProductType"
            table="ProductTypes"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedProductType</meta>

        <cache usage="read-only"/>
        <id
                name="productTypeId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_productTypeId</param>
            </generator>
        </id>

        <property
                name="name"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="description"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="digitalProduct"
                type="java.lang.Boolean"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <!-- eventually replace this by a separate entity 'productPricing' (that may have a relation with the photographer)-->
        <set name="prices"
             lazy="true"
             table="Prices2ProductTypes"
             cascade="save-update">
            <!--<meta attribute="scope-set">protected</meta>-->
            <!--<meta attribute="scope-get">protected</meta>-->
            <key column="productTypeId"/>
            <many-to-many class="ch.unartig.studioserver.model.Price" column="priceId"/>
        </set>


    </class>
</hibernate-mapping>
