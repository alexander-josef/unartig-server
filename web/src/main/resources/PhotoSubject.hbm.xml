<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.PhotoSubject"
            table="PhotoSubjects"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedPhotoSubject</meta>
        <cache usage="read-write"/>

        <id
                name="photoSubjectId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_photoSubjectId</param>
            </generator>
        </id>
<!--

        <property
                name="startnumber"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

-->
        <property
                name="name"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="age"
                type="java.lang.Integer"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <set name="photos"
            lazy="true"
            table="PhotoSubjects2Photos">
            <meta attribute="scope-set">protected</meta>
            <meta attribute="scope-get">protected</meta>
            <key column="photoSubjectId"/>
            <many-to-many class="ch.unartig.studioserver.model.Photo" column="photoId"/>
        </set>


        <set name="eventRunners"
             lazy="true"
             inverse="true"
             cascade="save-update"
                >
            <key column="photoSubjectId"/>
            <one-to-many class="ch.unartig.studioserver.model.EventRunner"/>
        </set>

        <!--

        <many-to-one
                name="album"
                class="ch.unartig.studioserver.model.StudioAlbum"
                lazy="proxy"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
            <column name="albumId" index="Photo_Album_INDEX"/>
        </many-to-one>

-->
    </class>
</hibernate-mapping>
