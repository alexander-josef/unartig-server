<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.PriceSegment"
            table="PriceSegments"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedPriceSegment</meta>
        <cache usage="read-only"/>
        <id
                name="priceSegmentId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_priceSegmentId</param>
            </generator>
        </id>
        <property
                name="priceSegmentName"
                type="java.lang.String"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="oipsProductGroup"
                type="java.lang.String"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

    </class>
</hibernate-mapping>
