<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.EventRunner"
            table="EventRunners"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedEventRunner</meta>
        <cache usage="read-write"/>

        <!--
                <id
                        name="eventRunnerId"
                        type="java.lang.Long"
                        >
                    <meta attribute="use-in-tostring">true</meta>
                    <generator class="native">
                        <param name="sequence">sequence_eventRunnerId</param>
                    </generator>
                </id>
        -->

        <composite-id>
            <key-many-to-one
                    name="event"
                    column="eventId"
                    class="ch.unartig.studioserver.model.Event"
                    >
                <meta attribute="use-in-tostring">true</meta>

            </key-many-to-one>

            <key-many-to-one
                    name="photoSubject"
                    column="photoSubjectId"
                    class="ch.unartig.studioserver.model.PhotoSubject"
                    >
                <meta attribute="use-in-tostring">true</meta>

            </key-many-to-one>

        </composite-id>


        <property
                name="startnumber"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="rank"
                type="java.lang.Integer"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="runningTime"
                type="java.lang.String"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

    </class>
</hibernate-mapping>
